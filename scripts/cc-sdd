#!/usr/bin/env bash
set -euo pipefail

# Wrapper to invoke CC-SDD CLI from sibling repo
NODE_BIN="${NODE_BIN:-node}"
CC_SDD_CLI="/Volumes/lemon/cursor/cc-sdd/tools/cc-sdd/dist/cli.js"

if [ ! -f "$CC_SDD_CLI" ]; then
  echo "CC-SDD CLI not found at: $CC_SDD_CLI" >&2
  echo "Ensure the sibling repo exists at ../cc-sdd and is built." >&2
  exit 1
fi

exec "$NODE_BIN" "$CC_SDD_CLI" "$@"


